<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>TowTruck - Just Click When You're Stuck</title>
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" >
    <link href="/stylesheets/style.css"   rel="stylesheet" type="text/css" media="screen">
    
    <script src="http://code.jquery.com/jquery-1.7.1.min.js" type="text/javascript"></script>
    <script src="/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/bootstrap/js/bootstrap-modal.js" type="text/javascript"></script>
    <script src="/javascripts/collaborate.js" type="text/javascript"></script>
    
    <script type="text/javascript">
      $(function(){
        $("#<%= rootKey %>_tab").addClass('active');
      });
    </script>

    <!-- Le fav and touch icons -->
    <!-- <link rel="shortcut icon" href="/images/favicon.ico">
    <link rel="apple-touch-icon" href="/images/apple-touch-icon.png">
    <link rel="apple-touch-icon" sizes="72x72" href="/images/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="/images/apple-touch-icon-114x114.png"> -->
  </head>

  <body class="collaborate">
    <div id="share_modal" class="modal hide fade">
      <div class="modal-header">
        <a href="#" class="close" data-dismiss="modal">×</a>
        <h3>Get Help by Sharing With a Friend</h3>
      </div>
      <div class="modal-body">
        <form><fieldset><input type="text" class="share" value="<%= thisUrl%>"/></fieldset></form>
        <p>
          <span class="label notice">Notice</span> 
          Anyone with this URL will be able to edit your file.
        </p>

      </div>
      <div class="modal-footer">
        <a href="#" class="btn primary" data-dismiss="modal">Close</a>
      </div>
    </div>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="brand" href="#">TowTruck - Editing</a>
          <p class="pull-right">
            <a id="play_button" class="btn" href="http://localhost:3000/v/<%= bundleKey%>" target="RenderTowtruck"><i class="icon play"></i>View in Browser</a>
            <a id="download_button" class="btn" href="#"><i class="icon file"></i> Download</a>
            <a id="share_button" class="btn" data-toggle="modal" href="#share_modal"><i class="icon share"></i> Share</a>
          </p>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="chat span3">
          <h3 class="nav-label">Chat</h3>
          <dl>
            <dt>@Simon</dt>
            <dd>Hey, what seems to be the problem?</dd>
            <dt>@Frank</dt>
            <dd>I don't know, but I'm getting an error.</dd>
          </dl>
          <form>
            <input type="text" id="chat_input" placeholder="Type something…" />
            <button type="submit" class="btn pull-right primary">Go</button>
          </form>
        </div>
        <div class="span9" id="editor">
          <ul id="file_tab_nav" class="nav nav-tabs">
            <% resources.forEach(function(resource){ %>
            <li id="<%= resource.key %>_tab" class="FileTab"><a href="http://localhost:9001/p/<%= resource.key %>?useMonospaceFont=true&amp;showChat=false&amp;showControls=false" target="etherpad"><%= resource.name %></a></li>
            <% }) %>
          </ul>
        
          <!-- frameBorder="0" is not valid HTML5, but it saves us from hacking etherpad -->
          <iframe 
            id="etherpad" 
            frameBorder="0" 
            name="etherpad" 
            src="http://localhost:9001/p/<%= rootKey%>?useMonospaceFont=true&amp;showChat=false&amp;showControls=false"
          ></iframe>
        </div>
      </div>
    </div>

   
    <footer>
      <div class="container">
        <div class="row">
          <a href="http://mozillalabs.com/">
            <img src="https://mozillalabs.com/wp-content/themes/labs2.0/img/mozilla-logo.png" width="41" height="31" alt="Mozilla Logo">
            <strong>Copyright © 2005-2010 Mozilla.</strong>
          </a>
        </div>
      </div>
    </footer>

  </body>
</html>